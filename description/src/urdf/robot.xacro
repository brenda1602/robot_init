<?xml version="1.0"?>

<robot name="robot" xmlns:xacro="http://ros.org/wiki/xacro" >

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>

    <xacro:property name="width" value="0.2" />

    <xacro:macro name="default_link" params="color">
        <collision>
            <origin xyz="0.0 0.0 1.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.2 0.2 2.0"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0.0 0.0 1.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.2 0.2 2"/>
            </geometry>
            <material name="${color}"/>
        </visual>
        <inertial>
            <origin xyz="0.0 0.0 1.0" rpy="0.0 0.0 0.0"/>
            <mass value="2"/>
            <inertia ixx="0.67" ixy="0.0" ixz="0.0" iyy="0.67" iyz="0.0" izz="0.013"/>  <!--ixx=m(y2+z2)/12-->
        </inertial>

    </xacro:macro>

    <link name="world"/>
    <joint name="fixed" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
    </joint>

    <link name= "base_link">  <!--link fixo-->  
        <xacro:default_link color="black"/>
    </link>

    <link name= "link2">    
        <xacro:default_link color="white"/>  
    </link>

    <joint name="joint1" type="continuous">
       <parent link="base_link"/>
       <child link="link2"/>
       <origin xyz="0.0 0.0 2.00" rpy="0.0 0.0 0.0"/>
       <axis xyz="0.0 1.0 0.0"/>
       <dynamics damping="0.7"/>
    </joint>
    
    <gazebo>
        <plugin filename="move_robot.so" name="gazebo_ros_control">
            <robotNamespace>robot</robotNamespace>    
        </plugin>
    </gazebo>
    <transmission name="joint1_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name ="joint1">
            <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
        </joint>
        <actuator name="link2">
            <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
        </actuator>
    </transmission>
    

</robot>