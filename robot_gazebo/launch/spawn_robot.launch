<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="model" default="$(find description)/urdf/robot.urdf"/>
  <arg name="gui" default="true" />
  
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find robot_gazebo)/worlds/empty_world.world"/>
    <arg name="gui" value="$(arg gui)" />
  </include>

  <param name="robot_description" command="cat '$(find description)/urdf/robot.urdf'" />

  <node name="spawn-robor-urdf" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-urdf -param robot_description -model robot"/>

</launch>